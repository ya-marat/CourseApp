<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:gravity="top|center_horizontal"
    tools:context=".AuthFragment">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/enter_label"
            android:textSize="28sp"
            android:textColor="#F2F2F3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_label"
            android:layout_marginTop="28.dp"
            android:textSize="16sp"
            android:textColor="#F2F2F3"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/oval_bg"
            android:hint="@string/email_hint"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:backgroundTint="#32333A"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_label"
            android:layout_marginTop="11dp"
            android:textSize="16sp"
            android:textColor="#F2F2F3"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/oval_bg"
            android:hint="@string/enter_password_hint"
            android:textColorHint="@color/hint_color"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:inputType="textPassword"
            android:paddingEnd="16dp"
            android:backgroundTint="#32333A"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_btn_label"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:backgroundTintMode="src_in"
            android:background="@drawable/oval_ripple"
            app:backgroundTint="@color/btn_green_tint"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_account_label"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="@string/registration_label"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_green_tint"
                android:clickable="true"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="@string/forgot_password_label"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/text_green_tint"
            android:clickable="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="#4D555E"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <ImageButton
                android:id="@+id/vkBtn"
                android:layout_width="156dp"
                android:layout_height="40dp"
                android:background="@drawable/oval_ripple"
                android:backgroundTint="#2683ED"
                android:src="@drawable/vk_icon"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/okBtn"
                android:layout_width="156dp"
                android:layout_height="40dp"
                android:background="@drawable/gradient_oval"
                android:src="@drawable/ok_icon"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>