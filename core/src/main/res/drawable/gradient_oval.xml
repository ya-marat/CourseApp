<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#33000000">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="999dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#ce4d00"
                android:endColor="#d9770d"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="999dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#F95D00"
                android:endColor="#F98509"/>
        </shape>
    </item>

</ripple>